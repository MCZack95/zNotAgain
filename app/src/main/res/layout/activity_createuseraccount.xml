<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#013243"
    android:padding="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.znotagain.login.Activity_CreateUserAccount">

    <ImageView
        android:id="@+id/logo"
        android:background="@mipmap/fork_and_spoon"
        android:scaleX="4"
        android:scaleY="2"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/register_usernameText"
        android:hint="Username"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/logo"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/register_passwordText"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/register_usernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/register_confirmPasswordText"
        android:hint="Confirm Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/register_passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/register_button"
        android:text="Register"
        android:background="#00FFFF"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:layout_marginTop="40sp"
        android:layout_below="@id/register_confirmPasswordText"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/already_member"
        android:text="Already a member? Login"
        android:textColor="#FFFF00"
        android:layout_marginTop="40sp"
        android:layout_below="@id/register_button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
</RelativeLayout>
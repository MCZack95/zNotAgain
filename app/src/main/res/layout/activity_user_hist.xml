<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#005050"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back"
        android:text="BACK"
        android:layout_marginRight="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tran_hist_stallName"
        android:text="Transaction History"
        android:textSize="25sp"
        android:textColor="#00CCFF"
        android:fontFamily="cursive"
        android:layout_marginLeft="15sp"
        android:layout_above="@id/tran_hist_ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/tran_hist_ListView"
        android:background="#FFFFFF"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_below="@id/back"
        android:layout_above="@id/clearAllStorageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <RelativeLayout
        android:id="@+id/clearAllStorageLayout"
        android:background="#FF0000"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="clearAllItems"
            android:id="@+id/clearAllButton"
            android:textSize="50sp"
            android:scaleX="0.17"
            android:background="@drawable/ic_clear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>

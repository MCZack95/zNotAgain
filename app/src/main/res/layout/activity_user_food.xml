<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:background="#87B553"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stall_status"
        android:text="Stall: "
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/food_status"
        android:text="Food: "
        android:textSize="20sp"
        android:layout_below="@id/stall_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/chooseFood"
        android:text="Choose a Dish:"
        android:textSize="30dp"
        android:background="#111111"
        android:textColor="#EEEEEE"
        android:layout_below="@id/food_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/chooseFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/myFoodListView"
            android:background="#FFFFFF"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="backToUserPage"
            android:id="@+id/exit"
            android:text="EXIT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/next"
            android:text="NEXT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="backToStall"
            android:id="@+id/back"
            android:text="BACK"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>
